<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="#794d9a">

    <Button
        android:id="@+id/ingredientDynamicImageAdd"
        android:layout_width="162dp"
        android:layout_height="46dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/round"
        android:drawableRight="@drawable/ic_baseline_add_a_photo_24"
        android:text="insert image"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/ingredientDynamicImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_baseline_fastfood_24"
        app:layout_constraintLeft_toRightOf="@id/ingredientDynamicImageAdd"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:id="@+id/removeIngredientImage"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/ic_baseline_cancel_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ingredientDynamicImageView"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>